<%= form_with model: @post, data: {turbo: false}, local: true do |f|%>
  <%= render 'shared/errors', resource: @post  %>

  <h2 class="new"><p>
    <%= f.label :content %><br>
    <%= f.text_area :content, rows: 10 %>
  </p></h2><br>

  <h3 style="margin-left: 390px"><p><%= f.submit 'Save',class:'btn btn-primary'%></p></h3>

  <h3><p><%= link_to 'Back', root_path,class:'btn btn-warning' %></p></h3>
<% end %>
