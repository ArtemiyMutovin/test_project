<% if current_user %>
<h2 class="button"><%= link_to "New Post", new_post_path, class:'btn btn-success' %></h2>
  <div>
    <table class="posts">
      <tr>
        <td>ID</td>
        <td>CONTENT</td>
        <td>USER</td>
        <td>DATE</td>
      </tr>
      <% @posts.each do |post| %>
       <tr>
         <th><%= post.id %></th>
         <th class="post"><%= post.content %></th>
         <th><%= post.user.email %></th>
         <th><%= post.created_at %></th>
       </tr>
      <% end %>
    </table>
  </div>
<% end %>
